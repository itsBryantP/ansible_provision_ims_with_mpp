<server>

    <featureManager>
        <feature>ssl-1.0</feature>
    </featureManager>

    <!-- Enable features -->
    <sslDefault sslRef="sslRef" />

    <ssl id="sslRef"
         keyStoreRef="keystore"
         trustStoreRef="truststore"
         clientAuthentication="false" />

    <keyStore id="keystore"
{% if ZCON_SERVER_KEYRING and ZCON_SERVER_KEYRING != "" %}
         location="safkeyring:///{{ZCON_SERVER_KEYRING}}"
{% else %}
         location="safkeyring:///zOSConnect.{{softwareServiceInstanceName}}"
{% endif %}
         password="password" type="JCERACFKS"
         fileBased="false" readOnly="true" />

    <keyStore id="truststore"
{%if ZCON_SERVER_KEYRING and ZCON_SERVER_KEYRING != "" %}
         location="safkeyring:///{{ZCON_SERVER_KEYRING}}"
{% else %}
         location="safkeyring:///zOSConnect.{{softwareServiceInstanceName}}"
{% endif %}
         password="password" type="JCERACFKS"
         fileBased="false" readOnly="true" />

</server>